    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/simple_stories_train/train.py",
            "args": [
                "${workspaceFolder}/simple_stories_train/train_config.yaml"
            ],
            "console": "integratedTerminal",
        }
    ]
}